{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header form-title">Login</div>
                <div class="card-body">
                    <form name="authenticate" class="form-horizontal" action="{{ path('security_login') }}" method="post">
                        <div class="form-group row">
                            <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail
                                Address</label>
                            <div class="col-md-6">
                                <input type="text" id="user_email" placeholder="Email" class="form-control"
                                       name="_username" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right"
                                   for="user_password_first">Password</label>
                            <div class="col-md-6">
                                <input type="password" class="form-control" id="password"
                                       placeholder="Password" name="_password" required>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <div class="row d-flex justify-content-around">
                            <a class="btn btn-lg btn-light" href="{{ path('users_register') }}">
                                Register
                            </a>
                            <button type="submit" class="btn btn-lg btn-secondary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
